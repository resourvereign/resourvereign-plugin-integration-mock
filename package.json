{
  "name": "resourvereign-plugin-integration-mock",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/resourvereign/resourvereign-plugin-integration-mock.git"
  },
  "author": {
    "name": "Dani LupiÃ³n",
    "email": "danilupion@gmail.com"
  },
  "description": "Mock integration plugin for resourvereign",
  "engines": {
    "node": ">=20.10.0"
  },
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:check": "tsc -p tsconfig.json --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --onlyChanged",
    "lint:fix": "eslint -c .eslintrc.json 'src/**/*.ts' --fix",
    "lint": "eslint -c .eslintrc.json 'src/**/*.ts'",
    "prettify": "prettier --write  \"./src/**/*.{ts,tsx,json}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@resourvereign/plugin-types": "^2.0.0"
  },
  "devDependencies": {
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "src/**/*.{js,cjs}": [
      "yarn prettify"
    ],
    "src/**/*.{ts,json}": [
      "yarn prettify",
      "yarn lint:fix --max-warnings=0",
      "yarn test"
    ]
  }
}
